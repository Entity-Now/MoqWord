<UserControl x:Class="MoqWord.WpfComponents.Cell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MoqWord.WpfComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 绑定 Title 属性 -->
        <TextBlock x:Name="_title" Grid.Column="0" FontSize="16"/>
        <!-- 定义 ContentPresenter 显示传递到 UserControl 的内容 -->
        <ContentPresenter x:Name="_opreation" Grid.Column="1"/>
    </Grid>
</UserControl>